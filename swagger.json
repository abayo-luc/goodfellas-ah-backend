{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Author's Haven",
    "description": "A community of like minded Authors"
  },
  "host": "",
  "tags": [
    {
      "name": "User",
      "description": "User operations"
    },
    {
      "name": "Article",
      "description": "Article operations"
    }
  ],
  "schemes": ["https"],
  "paths": {
    "/auth/signup": {
      "post": {
        "tags": ["User"],
        "summary": "Register's a user",
        "description": "Returns a user.",
        "parameters": [
          {
            "name": "Email",
            "in": "body",
            "description": "users email",
            "required": true,
            "type": "string"
          },
          {
            "name": "Firstname",
            "in": "body",
            "description": "user's firstname",
            "required": true,
            "type": "string"
          },
          {
            "name": "Lastname",
            "in": "body",
            "description": "user's lastname",
            "required": true,
            "type": "string"
          },
          {
            "name": "password",
            "in": "body",
            "description": "User's password",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "201": {
            "description": "A user",
            "schema": {
              "type": "array",
              "items": {
                "properties": {
                  "userId": {
                    "type": "integer"
                  },
                  "token": {
                    "type": "string"
                  },
                  "message": {
                    "type": "string"
                  },
                  "error": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/signin": {
      "post": {
        "tags": ["User"],
        "summary": "Authenticates a user",
        "description": "Returns an authentication token.",
        "parameters": [
          {
            "name": "Email",
            "in": "body",
            "description": "users email",
            "required": true,
            "type": "string"
          },
          {
            "name": "password",
            "in": "body",
            "description": "User's password",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Token",
            "schema": {
              "type": "array",
              "items": {
                "properties": {
                  "token": {
                    "type": "string"
                  },
                  "message": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/profile/user": {
      "get": {
        "tags": ["User"],
        "summary": "Get a user's profile",
        "description": "Returns a user's profile.",
        "parameters": [
          {
            "name": "userId",
            "in": "url",
            "description": "unique identifier for the user",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "A User's Profile",
            "schema": {
              "type": "array",
              "items": {
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "username": {
                    "type": "string"
                  },
                  "bio": {
                    "type": "string"
                  },
                  "image": {
                    "type": "image"
                  },
                  "following": {
                    "type": "binary"
                  },
                  "UserId": {
                    "type": "integer"
                  },
                  "createdAt": {
                    "type": "date"
                  },
                  "updatedAt": {
                    "type": "date"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/profile/user": {
      "put": {
        "tags": ["User"],
        "summary": "Updates User's profile",
        "description": "Returns a user's profile.",
        "parameters": [
          {
            "name": "Username",
            "in": "body",
            "description": "username of the user",
            "required": true,
            "type": "string"
          },
          {
            "name": "Bio",
            "in": "body",
            "description": "user's bio",
            "required": true,
            "type": "string"
          },
          {
            "name": "profielImage",
            "in": "body",
            "description": "user's profile image",
            "required": true,
            "type": "file"
          },
          {
            "name": "token",
            "in": "header",
            "description": "Authentication token",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "user's profile",
            "schema": {
              "type": "array",
              "items": {
                "properties": {
                  "data": {
                    "type": "object"
                  },
                  "error": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Article": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number",
          "description": "Unique identifier representing an article."
        },
        "user_id": {
          "type": "number",
          "description": "Unique identifier representing a specific User."
        },
        "title": {
          "type": "string",
          "description": "Title of the article."
        },
        "description": {
          "type": "string",
          "description": "Description of the article."
        },
        "created_at": {
          "type": "date",
          "description": "Article creation date."
        },
        "updated_at": {
          "type": "date",
          "description": "Date Article was updated."
        }
      }
    },
    "User": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number",
          "description": "Unique identifier representing a user."
        },

        "username": {
          "type": "string",
          "description": "the username of the user."
        },
        "email": {
          "type": "email",
          "description": "User email."
        },
        "created_at": {
          "type": "date",
          "description": "User creation date."
        },
        "updated_at": {
          "type": "date",
          "description": "Date for user detail update."
        },
        "password": {
          "type": "password",
          "description": "User password."
        }
      }
    }
  }
}
