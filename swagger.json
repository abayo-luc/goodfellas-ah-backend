{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Author's Haven",
    "description": "A community of like minded Authors"
  },
  "host": "",
  "tags": [
    {
      "name": "User",
      "description": "User operations"
    },
    {
      "name": "Article",
      "description": "Article operations"
    }
  ],
  "schemes": ["https"],
  "paths": {
    "/article": {
      "get": {
        "tags": ["Article"],
        "summary": "Get an article",
        "description": "Returns an article.",
        "responses": {
          "200": {
            "description": "An article",
            "schema": {
              "type": "array",
              "items": {
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "title": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user": {
      "post": {
        "tags": ["User"],
        "summary": "Register a user",
        "description": "Returns an article.",
        "parameters": [
          {
            "name": "email",
            "in": "body",
            "description": "users email",
            "required": true,
            "type": "string"
          },
          {
            "name": "password",
            "in": "body",
            "description": "User's password",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "A user",
            "schema": {
              "type": "array",
              "items": {
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
